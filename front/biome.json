{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "quoteStyle": "single",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80
    },
    "parser": {
      "allowWrongLineComments": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "lineEnding": "lf",
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    },
    "parser": {
      "allowTrailingCommas": true,
      "allowComments": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "asNeeded",
      "indentStyle": "space",
      "lineEnding": "lf",
      "lineWidth": 80,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double",
      "attributePosition": "auto",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "indentWidth": 2,
      "trailingComma": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "options": { "maxAllowedComplexity": 5 },
          "level": "error"
        },
        "useSimplifiedLogicExpression": "warn",
        "noVoid": "warn"
      },
      "style": {
        "noArguments": "error",
        "noParameterAssign": "error",
        "useEnumInitializers": "error",
        "noShoutyConstants": "warn", "noVar":"error", "useCollapsedElseIf":"warn", "useConsistentArrayType":"warn","useFragmentSyntax":"warn", "useShorthandArrayType":"warn", "useShorthandAssign":"warn", "useShorthandFunctionType":"warn" 
      },
      "a11y": {
        "noAccessKey": "warn"
      },
      "correctness": {
        "noChildrenProp": "off",
        "noEmptyPattern": "off",
        "useHookAtTopLevel": "error"
      },
      "suspicious": {
        "noEmptyInterface": "off"
      }
    }
  }
}
